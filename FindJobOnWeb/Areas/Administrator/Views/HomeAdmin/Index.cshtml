<script type="text/javascript">

    var pageLayout = 1;
    var pageLength = 5;

    $(document).ready(function () {
        loadData();
    });

    function loadData() {
        $.ajax({
            url: '/Company/List',
            type: 'GET',
            contentType: 'application/json;charset=utf-8',
            dataType: 'JSON',
            success: function (result) {
                $.each(result, function (key, item) {
                    var company = item.companyName;
                    $.ajax({
                        url: '/HomeAdmin/List',
                        type: 'GET',
                        contentType: 'application/json;charset=utf-8',
                        dataType: 'JSON',
                        success: function (result) {
                            var pageCount = Math.ceil(result.length / pageLength);
                            if (pageLayout < 1) {
                                pageLayout = 1;
                            } else if (pageLayout > pageCount) {
                                pageLayout = pageCount;
                            }

                            var startIndex = (pageLayout - 1) * pageLength;
                            var endIndex = startIndex + pageLength;
                            var currentTours = result.slice(startIndex, endIndex);

                            var data = '';
                            $.each(currentTours, function (key, item) {
                                data += '<div class="single-job-items mb-30">';
                                data += '<div class="job-items">';
                                data += '<div class="job-tittle">';
                                data += '<a href="/Administrator/Jobdetails/Index/' + item.id + '"><h4>' + item.jobTypeName + '</h4></a>';
                                data += '<ul>';
                                data += '<li>' + "Tên công ty : " + company + '</li>';
                                data += '<li><i class="fas fa-map-marker-alt"></i>' + "Địa điểm : " + item.location + '</li>';
                                data += '<li>' + "Lương tháng : " + item.salary + " VND" + '</li>';
                                data += '</ul>';
                                data += '</div>';
                                data += '</div>';
                                data += '<div class="items-link items-link2 f-right">';
                                data += '<a href="job_details.html">' + item.status + '</a>';
                                const datetime = new Date(item.createdDate);
                                const year = datetime.getFullYear();
                                const month = datetime.getMonth() + 1;
                                const day = datetime.getDate();
                                const date = year + '-' + month + '-' + day;
                                data += '<span>' + "Ngày đăng : " + date + '</span>';
                                data += '</div>';
                                data += '</div>';
                            });
                            $('.listJobPost').html(data);

                            renderPagination(pageCount);
                        },
                        error: function (error) {
                            console.log("Error: " + error.responseText);
                        }
                    });
                });
            },
            error: function (error) {
                console.log("Error: " + error.responseText);
            }
        });
    }

    function renderPagination(pageCount) {
        var pagination = $('#pagination');
        pagination.empty();
        for (var i = 1; i <= pageCount; i++) {
            var emlement = $('<li class="page-item page_item"><span class="page-link" href="#">' + i + '</span></li>');
            pagination.append(emlement);
        }
    }

    $('#pagination').on('click', 'li', function () {
        pageLayout = parseInt($(this).text());
        loadData();
    });


</script>

